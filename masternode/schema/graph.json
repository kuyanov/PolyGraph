{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["blocks", "connections"],
  "properties": {
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "inputs", "outputs", "tasks"],
        "properties": {
          "name": {
            "type": "string"
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "bind-path": {
                  "type": "string"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "bind-path": {
                  "type": "string"
                }
              }
            }
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["argv"],
              "properties": {
                "argv": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "stdin": {
                  "type": "string"
                },
                "stdout": {
                  "type": "string"
                },
                "time-limit-ms": {
                  "type": "integer"
                },
                "wall-time-limit-ms": {
                  "type": "integer"
                },
                "memory-limit-kb": {
                  "type": "integer"
                },
                "fsize-limit-kb": {
                  "type": "integer"
                },
                "max-files": {
                  "type": "integer"
                },
                "max-threads": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["start-block-id", "start-block-output", "end-block-id", "end-block-input"],
        "properties": {
          "start-block-id": {
            "type": "integer"
          },
          "start-block-output": {
            "type": "string"
          },
          "end-block-id": {
            "type": "integer"
          },
          "end-block-input": {
            "type": "string"
          }
        }
      }
    }
  }
}