{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "blocks",
    "connections",
    "meta"
  ],
  "properties": {
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "inputs",
          "outputs",
          "externals",
          "tasks"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "externals": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "user-path"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "user-path": {
                  "type": "string"
                }
              }
            }
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "argv"
              ],
              "properties": {
                "argv": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "stdin": {
                  "type": "string"
                },
                "stdout": {
                  "type": "string"
                },
                "time-limit-ms": {
                  "type": "integer"
                },
                "wall-time-limit-ms": {
                  "type": "integer"
                },
                "memory-limit-kb": {
                  "type": "integer"
                },
                "fsize-limit-kb": {
                  "type": "integer"
                },
                "max-files": {
                  "type": "integer"
                },
                "max-threads": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "start-block-id",
          "start-output-id",
          "end-block-id",
          "end-input-id"
        ],
        "properties": {
          "start-block-id": {
            "type": "integer"
          },
          "start-output-id": {
            "type": "integer"
          },
          "end-block-id": {
            "type": "integer"
          },
          "end-input-id": {
            "type": "integer"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "runner-group",
        "max-runners"
      ],
      "properties": {
        "runner-group": {
          "type": "string"
        },
        "max-runners": {
          "type": "integer"
        }
      }
    }
  }
}