{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "container",
    "task"
  ],
  "properties": {
    "container": {
      "type": "string"
    },
    "task": {
      "type": "object",
      "required": [
        "argv",
        "env"
      ],
      "properties": {
        "argv": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "time-limit-ms": {
          "type": "integer"
        },
        "wall-time-limit-ms": {
          "type": "integer"
        },
        "memory-limit-kb": {
          "type": "integer"
        },
        "fsize-limit-kb": {
          "type": "integer"
        },
        "max-files": {
          "type": "integer"
        },
        "max-threads": {
          "type": "integer"
        }
      }
    }
  }
}