{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "container",
    "task"
  ],
  "properties": {
    "container": {
      "type": "string"
    },
    "task": {
      "type": "object",
      "required": [
        "argv",
        "env",
        "stdin",
        "stdout",
        "stderr",
        "limits"
      ],
      "properties": {
        "argv": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "env": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "stdin": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        },
        "stdout": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        },
        "stderr": {
          "oneOf": [
            {
              "type": "null"
            },
            {
              "type": "string"
            }
          ]
        },
        "limits": {
          "type": "object",
          "properties": {
            "time-limit-ms": {
              "type": "integer"
            },
            "wall-time-limit-ms": {
              "type": "integer"
            },
            "memory-limit-kb": {
              "type": "integer"
            },
            "fsize-limit-kb": {
              "type": "integer"
            },
            "max-files": {
              "type": "integer"
            },
            "max-threads": {
              "type": "integer"
            }
          }
        }
      }
    }
  }
}