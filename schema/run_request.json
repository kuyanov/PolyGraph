{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "container",
    "tasks"
  ],
  "properties": {
    "container": {
      "type": "string"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "argv",
          "binds",
          "env"
        ],
        "properties": {
          "argv": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "binds": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "inside",
                "outside",
                "writable"
              ],
              "properties": {
                "inside": {
                  "type": "string"
                },
                "outside": {
                  "type": "string"
                },
                "writable": {
                  "type": "boolean"
                }
              }
            }
          },
          "env": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "stdin": {
            "type": "string"
          },
          "stdout": {
            "type": "string"
          },
          "stderr": {
            "type": "string"
          },
          "time-limit-ms": {
            "type": "integer"
          },
          "wall-time-limit-ms": {
            "type": "integer"
          },
          "memory-limit-kb": {
            "type": "integer"
          },
          "fsize-limit-kb": {
            "type": "integer"
          },
          "max-files": {
            "type": "integer"
          },
          "max-threads": {
            "type": "integer"
          }
        }
      }
    }
  }
}