{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "path": {
      "type": "string",
      "pattern": "^([A-Za-z0-9_-]+/)*[A-Za-z0-9_-]+(\\.[A-Za-z0-9_-]+)*$"
    }
  },
  "type": "object",
  "required": [
    "blocks",
    "connections",
    "meta"
  ],
  "properties": {
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "inputs",
          "outputs",
          "binds",
          "argv",
          "env",
          "constraints"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "path",
                "cached"
              ],
              "properties": {
                "path": {
                  "$ref": "#/definitions/path"
                },
                "cached": {
                  "type": "boolean"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "path"
              ],
              "properties": {
                "path": {
                  "$ref": "#/definitions/path"
                }
              }
            }
          },
          "binds": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "inside",
                "outside",
                "readonly"
              ],
              "properties": {
                "inside": {
                  "$ref": "#/definitions/path"
                },
                "outside": {
                  "$ref": "#/definitions/path"
                },
                "readonly": {
                  "type": "boolean"
                }
              }
            }
          },
          "argv": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "env": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "constraints": {
            "type": "object",
            "properties": {
              "time-limit-ms": {
                "type": "integer"
              },
              "wall-time-limit-ms": {
                "type": "integer"
              },
              "memory-limit-kb": {
                "type": "integer"
              },
              "fsize-limit-kb": {
                "type": "integer"
              },
              "max-files": {
                "type": "integer"
              },
              "max-threads": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source-block-id",
          "source-output-id",
          "target-block-id",
          "target-input-id"
        ],
        "properties": {
          "source-block-id": {
            "type": "integer",
            "minimum": 0
          },
          "source-output-id": {
            "type": "integer",
            "minimum": 0
          },
          "target-block-id": {
            "type": "integer",
            "minimum": 0
          },
          "target-input-id": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "name",
        "partition",
        "max-runners"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "partition": {
          "type": "string",
          "minLength": 1
        },
        "max-runners": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}