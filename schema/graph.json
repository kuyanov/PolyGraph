{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "filename": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+(\\.[A-Za-z0-9_-]+)*$"
    }
  },
  "type": "object",
  "required": [
    "blocks",
    "connections",
    "meta"
  ],
  "properties": {
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "binds",
          "task"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "binds": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "inside-filename",
                "outside-path"
              ],
              "properties": {
                "inside-filename": {
                  "$ref": "#/definitions/filename"
                },
                "outside-path": {
                  "type": "string"
                }
              }
            }
          },
          "task": {
            "type": "object",
            "required": [
              "argv",
              "env"
            ],
            "properties": {
              "argv": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "time-limit-ms": {
                "type": "integer"
              },
              "wall-time-limit-ms": {
                "type": "integer"
              },
              "memory-limit-kb": {
                "type": "integer"
              },
              "fsize-limit-kb": {
                "type": "integer"
              },
              "max-files": {
                "type": "integer"
              },
              "max-threads": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "start-block-id",
          "start-filename",
          "end-block-id",
          "end-filename"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "regular",
              "directory"
            ]
          },
          "start-block-id": {
            "type": "integer",
            "minimum": 0
          },
          "start-filename": {
            "$ref": "#/definitions/filename"
          },
          "end-block-id": {
            "type": "integer",
            "minimum": 0
          },
          "end-filename": {
            "$ref": "#/definitions/filename"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "name",
        "partition",
        "max-runners"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "partition": {
          "type": "string",
          "minLength": 1
        },
        "max-runners": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}