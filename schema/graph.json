{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "blocks",
    "connections",
    "meta"
  ],
  "properties": {
    "blocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "binds",
          "inputs",
          "outputs",
          "task"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "binds": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "inside",
                "outside"
              ],
              "properties": {
                "inside": {
                  "type": "string"
                },
                "outside": {
                  "type": "string"
                }
              }
            }
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                }
              }
            }
          },
          "task": {
            "type": "object",
            "required": [
              "argv",
              "env"
            ],
            "properties": {
              "argv": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "time-limit-ms": {
                "type": "integer"
              },
              "wall-time-limit-ms": {
                "type": "integer"
              },
              "memory-limit-kb": {
                "type": "integer"
              },
              "fsize-limit-kb": {
                "type": "integer"
              },
              "max-files": {
                "type": "integer"
              },
              "max-threads": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "start-block-id",
          "start-output-id",
          "end-block-id",
          "end-input-id"
        ],
        "properties": {
          "start-block-id": {
            "type": "integer"
          },
          "start-output-id": {
            "type": "integer"
          },
          "end-block-id": {
            "type": "integer"
          },
          "end-input-id": {
            "type": "integer"
          }
        }
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "name",
        "partition",
        "max-runners"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "partition": {
          "type": "string"
        },
        "max-runners": {
          "type": "integer"
        }
      }
    }
  }
}